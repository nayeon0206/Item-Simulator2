generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  userid    Int      @id @default(autoincrement()) @map("userid")
  email     String   @unique @map("email")
  password  String   @map("password")
  createdAt DateTime @default(now()) @map("createdAt")
  updatedAt DateTime @updatedAt @map("updatedAt")

  characters Charcter[] // Users와 Character의 1:N 관계

   @@map("Users")
}

model Charcter {
  charcterid Int    @id @default(autoincrement()) @map("charcterid")
  name       String
  health     Int    @default(500)
  power      Int    @default(100)
  money      Int    @default(10000)
  userId     Int
  User       Users  @relation(fields: [userId], references: [userid]) // Users 모델의 'userid'를 참조
}

model Item {
  itemid       Int      @id @default(autoincrement())@map("itemid")
  code     String   @unique // 아이템 코드 (고유값)
  name     String   // 아이템 이름
  ability  Json     // JSON 포맷의 아이템 능력
  price    Int      // 아이템 가격
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}